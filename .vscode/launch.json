    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 80
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 0,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=${port}"
            }
        },
        {
            "name": "Launch tests",
            "type": "php",
            "request": "launch",
            "cwd": "../../../../../../xampp/htdocs/ProjetDAW/tests/",
            "program": "../../../../../../xampp/htdocs/ProjetDAW/tests/test.php",
            "port": 0,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=${port}"
            }
        },
        {
            "name": "Launch Built-in web server",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes",
                "-S",
                "127.0.0.1/test"
            ],
            "program": "${workspaceFolder}/Public/index.php",
            "port": 80,
            "serverReadyAction": {
                "pattern": "Development Server \\(http://127.0.0.1:([0-9]+)\\) started",
                "uriFormat": "http://127.0.0.1/test",
                "action": "openExternally"
            }
        }
    ]
}